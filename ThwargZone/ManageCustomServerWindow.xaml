<Window x:Class="ThwargZone.ManageCustomServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Custom Servers" Height="500" Width="700"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="False"
        Icon="/Assets/1.ico">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        
        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Background="#010880" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Icon and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0,0,0">
                    <Image Source="/Assets/1.ico" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock x:Name="TitleText" Text="Manage Custom Servers" 
                               Foreground="White" FontWeight="Bold" FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Window Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,5,0">
                    <!-- Minimize Button -->
                    <Button Width="16" Height="16" Margin="2,0,0,0" Click="Minimize_Click" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#ECE9D8"/>
                                <Setter Property="BorderBrush" Value="#003C74"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="0" ShadowDepth="1" 
                                                                      Direction="315" Color="White" Opacity="0.8"/>
                                                </Border.Effect>
                                                <Grid>
                                                    <Rectangle Width="6" Height="2" Fill="Black" 
                                                               VerticalAlignment="Center" Margin="0,1,0,0"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#F6F4EC"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#D4D0C8"/>
                                                    <Setter TargetName="border" Property="BorderBrush" Value="#003C74"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Close Button -->
                    <Button Width="16" Height="16" Margin="2,0,0,0" Click="Close_Click" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#ECE9D8"/>
                                <Setter Property="BorderBrush" Value="#003C74"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="0" ShadowDepth="1" 
                                                                      Direction="315" Color="White" Opacity="0.8"/>
                                                </Border.Effect>
                                                <Grid>
                                                    <Path Data="M0,0 L6,6 M6,0 L0,6" Stroke="Black" StrokeThickness="1.2"
                                                          HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,0,0"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#F6F4EC"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#D4D0C8"/>
                                                    <Setter TargetName="border" Property="BorderBrush" Value="#003C74"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Background="#908E91">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Manage your custom servers:" FontWeight="Bold" FontSize="16" Foreground="White" Margin="0,0,0,10"/>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="CustomServersListBox" SelectionMode="Single" Margin="0,0,0,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" MinWidth="300"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Foreground="Black"/>
                                        <TextBlock Text="{Binding Host, StringFormat='Host: {0}'}" FontSize="12" Foreground="#333333"/>
                                        <TextBlock Text="{Binding Port, StringFormat='Port: {0}'}" FontSize="12" Foreground="#333333"/>
                                        <TextBlock Text="{Binding Type, StringFormat='Type: {0}'}" FontSize="12" Foreground="#333333"/>
                                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#333333" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <Button Content="Edit" Width="60" Height="25" Margin="5,0,5,0"
                                                Click="EditServer_Click" Background="#4CAF50" Foreground="White" 
                                                FontWeight="Bold" BorderThickness="0" Tag="{Binding}"/>
                                        <Button Content="Remove" Width="70" Height="25" Margin="5,0,0,0"
                                                Click="RemoveServer_Click" Background="#F44336" Foreground="White" 
                                                FontWeight="Bold" BorderThickness="0" Tag="{Binding}"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
                
                <TextBlock x:Name="NoServersText" Grid.Row="1" Text="No custom servers found." 
                           FontSize="14" Foreground="#333333" HorizontalAlignment="Center" 
                           VerticalAlignment="Center" Visibility="Collapsed"/>
            </Grid>
        </Grid>
        
        <!-- Buttons -->
        <Grid Grid.Row="2" Background="#908E91">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Add New Server" Width="120" Height="30" Margin="10,0,10,0" 
                        Click="AddServer_Click" Background="#2196F3" Foreground="White" 
                        FontWeight="Bold" BorderThickness="0"/>
                <Button Content="Close" Width="100" Height="30" Margin="10,0,10,0" 
                        Click="Close_Click" Background="#CCCCCC" Foreground="Black" 
                        FontWeight="Bold" BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
